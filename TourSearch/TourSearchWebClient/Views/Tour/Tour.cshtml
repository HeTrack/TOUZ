@{
    ViewData["Title"] = "Туры";
}
<div class="text-center text-info">
    <h1>Туры</h1>
</div>
<table class="table">
    <tr>
        <td>Тур - оператор</td>
        <td>Дата вылета</td>
        <td>Дата прилёта</td>
        <td>Город вылета</td>
        <td>Страна</td>
        <td>Курорт</td>
        <td>Отель</td>
        <td>Кол-во звёзд</td>
        <td>Тип питания</td>
        <td>Тип номера</td>
        <td>Количество мест</td>
        <td>Цена за 1 чел.</td>
    </tr>
    
    @foreach (var tour in ViewBag.tours)
    {      
<tr>
    <td>@tour.TourOperatorName</td>
    <td>@tour.StartDate</td>
    <td>@tour.EndDate</td>
    <td>@tour.DepartureName</td>
    <td>@tour.CountryName</td>
    <td>@tour.ResortName</td>
    <td>@tour.HotelName</td>
    <td>@tour.StarName</td>
    <td>@tour.MealName</td>
    <td>@tour.RoomName</td>
    <td>@tour.CountPlaces</td>
    <td>@tour.Cost</td>
</tr>
        }
    }
</table>